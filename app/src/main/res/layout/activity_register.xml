<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".register">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#fcf9f9"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



    <ImageView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Register:"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Phone Number"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="number"
        android:id="@+id/etPhoneNum"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Username"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPersonName"
        android:id="@+id/etName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter CNIC"
        android:inputType="number"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/etCnic"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Address"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPostalAddress"
        android:id="@+id/etAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Email"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/country_arrays"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/spinner_drawable"
        android:prompt="@string/country_prompt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Select Profile Pic"
                android:textSize="10dp"
                android:paddingTop="100dp"
                android:padding="8dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/whiteCardColor"

                android:layout_marginTop="20dp"
                android:background="@color/purple_700"
                android:id="@+id/btnuploadPic"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/women_logo"
                android:layout_marginStart="40dp"
                />

            </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="18dp"
        android:padding="20dp"
        android:textColor="@color/whiteCardColor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_green"
        android:id="@+id/btnlogin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already have an account?"
            android:textColor="#878282"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login!"
            android:id="@+id/etLogin"
            android:layout_marginStart="5dp"
            android:textColor="@color/design_default_color_primary_variant"
            android:textSize="12dp"

            android:textStyle="bold" />
    </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>